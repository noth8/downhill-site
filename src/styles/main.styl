body,
html
  width 100%
  height 100%

body
  font-family 'Merriweather', 'Helvetica Neue', Arial, sans-serif

hr
  max-width 50px
  border-width 3px
  border-color #193509
  &.light
    border-color #fff

a
  color #193509
  transition all 0.2s
  &:hover
    color #193509

h1,
h2,
h3,
h4,
h5,
h6
  font-family 'Open Sans', 'Helvetica Neue', Arial, sans-serif

.bg-primary
  background-color #193509 !important

.bg-dark
  background-color #212529 !important

.text-faded
  color rgba(255, 255, 255, 0.7)

section
  padding 8rem 0

.block-heading
  margin-top 0

::selection
  color #fff
  background #212529
  text-shadow none

img
  &::selection
    color #fff
    background transparent

#mNav
  border-bottom 1px solid rgba(33, 37, 41, 0.1)
  background-color #fff
  font-family 'Open Sans', 'Helvetica Neue', Arial, sans-serif
  transition all 0.2s

#mNav .navbar-nav>li.nav-item>a.nav-link,
#mNav .navbar-nav>li.nav-item>a.nav-link:focus
  font-size .7rem
  font-weight 700
  text-transform uppercase
  color #212529

#mNav .navbar-nav>li.nav-item>a.nav-link:hover,
#mNav .navbar-nav>li.nav-item>a.nav-link:focus:hover
  color #193509

#mNav .navbar-nav>li.nav-item>a.nav-link.active,
#mNav .navbar-nav>li.nav-item>a.nav-link:focus.active
  color #d82222 !important
  background-color transparent

#mNav .navbar-nav>li.nav-item>a.nav-link.active:hover,
#mNav .navbar-nav>li.nav-item>a.nav-link:focus.active:hover
  background-color transparent

@media (min-width: 992px)
  #mNav
    border-color transparent
    background-color transparent
    .navbar-nav
      & > li
        &.nav-item
          & > a
            &.nav-link
              padding 0.5rem 1rem
  #mNav.navbar-shrink
    border-bottom 1px solid rgba(33, 37, 41, 0.1)
    background-color #fff

  #mNav .navbar-nav>li.nav-item>a.nav-link,
  #mNav .navbar-nav>li.nav-item>a.nav-link:focus
    font-size .9rem
    color rgba(255, 255, 255, 0.7)

  #mNav.navbar-shrink .navbar-nav>li.nav-item>a.nav-link,
  #mNav.navbar-shrink .navbar-nav>li.nav-item>a.nav-link:focus
    color #212529

  #mNav.navbar-shrink .navbar-nav>li.nav-item>a.nav-link:hover,
  #mNav.navbar-shrink .navbar-nav>li.nav-item>a.nav-link:focus:hover
    color #d82222

@media (min-width: 576px)
  #mNav .navbar-nav>li.nav-item>a.nav-link,
  #mNav .navbar-nav>li.nav-item>a.nav-link:focus
    font-size .9rem

header
  &.shead
    background-image url("../img/header-mini.jpg")
    background-position left top
    background-size cover
    height 100vh
    hr
      margin-top 30px
      margin-bottom 30px
    h1
      font-size 2rem
    p
      font-weight 300

@media (min-width: 768px)
  header
    &.shead
      background-image url("../img/header.jpg")
      background-position center center
      p
        font-size 1.15rem

@media (min-width: 992px)
  header
    &.shead
      min-height 650px
      padding-top 0
      padding-bottom 0
      h1
        font-size 3rem

@media (min-width: 1200px)
  header
    &.shead
      h1
        font-size 4rem

.offer-box
  max-width 400px

.gallery-box
  position relative
  display block
  max-width 650px
  margin 0 auto
  .gallery-box-caption
    position absolute
    bottom 0
    display block
    width 100%
    height 100%
    text-align center
    opacity 0
    color #fff
    background rgba(216, 34, 34, 0.5)
    transition all 0.2s
  &:hover
    .gallery-box-caption
      opacity 1
  &:focus
    outline none

.offer-head
  color #193509 !important

.btn
  font-weight 700
  text-transform uppercase
  border none
  border-radius 300px
  font-family 'Open Sans', 'Helvetica Neue', Arial, sans-serif

.btn-xl
  padding 1rem 2rem

.btn-primary
  background-color #d82222
  border-color #d82222

.btn-primary:hover,
.btn-primary:focus,
.btn-primary:active
  color #fff
  background-color #ee4b28 !important

.btn-primary:active,
.btn-primary:focus
  box-shadow 0 0 0 0.2rem rgba(240, 95, 64, 0.5) !important

#contact
  padding-bottom 0

footer
  padding-top 5rem
  padding-bottom 2rem